{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@voice-ai-workforce/types": ["./packages/types/src"],
      "@voice-ai-workforce/core": ["./packages/core/src"],
      "@voice-ai-workforce/react": ["./packages/react/src"]
    }
  },
  "include": ["packages/*/src/**/*", "examples/*/src/**/*"]
}
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "composite": true,
    "noEmit": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@voice-ai-workforce/types": ["../types/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "**/*.test.ts", "**/__tests__/**/*"],
  "references": [
    { "path": "../types" }
  ]
}